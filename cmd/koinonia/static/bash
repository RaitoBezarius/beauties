share() {
    if ((${#} == 0)); then
        echo "Usage:"
        echo "	share /path/to/file"
        echo "	cat /path/to/file | share filename"
        return 1
    fi

    local url

    if tty -s; then
        basefile=$(basename "${1}")
        url=$(curl --progress-bar --upload-file "${1}" "https://tbrnk.quebec/${basefile:-}")
    else
        url=$(curl --progress-bar --upload-file "-" "https://tbrnk.quebec/${1}")
    fi

    echo "${url}"
}

